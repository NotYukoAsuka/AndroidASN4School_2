<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GamePlay"
    tools:layout_editor_absoluteY="73dp">

    <TableLayout
        android:id="@+id/game_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_found_mines">
    </TableLayout>

    <TextView
        android:id="@+id/msg_found_mines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/game_board"
        app:layout_constraintStart_toStartOf="@+id/game_board"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scan_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/sampletext"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/game_board"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>